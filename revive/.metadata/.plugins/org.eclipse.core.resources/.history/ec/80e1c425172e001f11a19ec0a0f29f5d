<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 순수 sql문만 작성 xml 하나가 아닐 수도 있다: 여러개 만들어도 무관(테이블 마다 1개의 mapper) -->

<mapper namespace="com.smhrd.ingredient.database.MemberMapper">
	<!-- sql문장 작성: 태그로 작성 id값: 연결해줄 고유 아이디 parmeterType: 입력받을 타입 작성(사용자 정의 타입인 
		경우 경로부터 작성) sql문 내 매개변수 채워 줄때 ?가 아니라: #{변수명} Member에 있는 변수명과 일치해야함 -->
	<!-- 파라미터 타입에 패키지 주소가 간소화된 이유: config에 있음 -->
	<!-- 첫 변수 null: mysql에 1씩 증가하는 값(ai) -->
	
	
	<!-- 회원가입 -->
	<insert id="memberInsert" parameterType="com.smhrd.ingredient.model.IngredientDTO">
		insert into members (mem_id, mem_pw, mem_name, mem_phone, mem_email, joined_at, mem_type)
		values(#{mem_id}, #{mem_pw}, #{mem_name}, #{mem_phone}, #{mem_email}, #{joined_at}, #{mem_type})
	</insert>
	
	<!-- 멤버 아이디 중복 체크 -->
    <select id="checkMemberId" resultType="int" parameterType="String">
        SELECT COUNT(*) FROM members WHERE mem_id=#{mem_id}
    </select>
	
	<!-- 로그인 -->
	<select id="selectMember" parameterType="com.smhrd.ingredient.model.IngredientDTO"
		resultType="com.smhrd.ingredient.model.IngredientDTO">
		select * from members where mem_id=#{mem_id} and mem_pw=#{mem_pw}
	</select>
	
	<!-- 회원탈퇴 -->
	<delete id="deletMember"
		parameterType="String">
		delete from members where mem_id=#{mem_id}
	</delete>
	
	<!-- 회원정보 수정 -->
	<update id="updateMember" parameterType="com.smhrd.ingredient.model.IngredientDTO">
		update members
		set mem_pw=#{mem_pw}, mem_name=#{mem_name}, mem_phone=#{mem_phone}, mem_email=#{mem_email}
		where mem_id=#{mem_id}
	</update>
	
	
