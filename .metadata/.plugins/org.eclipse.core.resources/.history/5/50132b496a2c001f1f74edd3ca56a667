package com.smhrd.member.controller;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import com.smhrd.member.model.MemberDAO;

public class EditMemberCon extends HttpServlet {
	private static final long serialVersionUID = 1L;

	protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {


		// 1. 한글 인코딩
		// 데이터를 가져오기 전에 데이터 전송 방식이 Post라면 인코딩 설정
		request.setCharacterEncoding("UTF-8");

		// 2. 데이터 가지고 오기
		//email정보는 어디에서 가져와야 하는지: session
		HttpSession session = request.getSession();// 세션 생성
		MemberDAO member=(MemberDAO)session.getAttribute("loginMember");
		
		String email=member.getEmail();
		String pw = request.getParameter("pw");
		String tel = request.getParameter("tel");
		String address = request.getParameter("address");
		
		MemberDAO updateMember = new MemberDAO(mem_id, mem_pw, mem_name, mem_phone, mem_email, joined_At, mem_type);

		// 3. DB기능 호출
		MemberDAO dao = new MemberDAO();

		int cnt = dao.update(updateMember);

		if (cnt > 0) {
			//session에 저장된 회원정보를 업데이트하기
			session.setAttribute("loginMember", updateMember);
			
			System.out.println("정보수정 성공");
			response.sendRedirect("index.jsp");
		} else {
			System.out.println("정보수정 실패");
			response.sendRedirect("update.jsp");
		}
	}

}
